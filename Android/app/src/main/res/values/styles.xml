<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NotoSansTextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="fontFamily">@font/noto_sans</item>
    </style>

    <style name="app_logo">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#010101</item>
    </style>

    <style name="tasks_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#010101</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tasks_number">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#010101</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tasks_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#010101</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tasks_body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#010101</item>
    </style>

    <style name="tasks_caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#BDBDBD</item>
    </style>

    <style name="history_user_name">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#010101</item>
    </style>

    <style name="history_body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#010101</item>
    </style>

    <style name="history_time_stamp">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#828282</item>
    </style>

    <style name="dialog_title_placeholder">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#828282</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_body_placeholder">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#828282</item>
    </style>

    <style name="dialog_ok_button_placeholder">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#66FFFFFF</item>
    </style>

</resources>
