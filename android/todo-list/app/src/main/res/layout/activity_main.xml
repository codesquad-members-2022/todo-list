<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/dlo_appbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:openDrawer="end">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/todo_grey_01"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/top_appbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/todo_grey_01"
                android:fitsSystemWindows="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/top_appbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    app:menu="@menu/menu_appbar"
                    app:title="TO-DO LIST"
                    app:titleTextAppearance="@style/TextAppbarTitle.Black" />

            </com.google.android.material.appbar.AppBarLayout>

            <!-- Screen content -->
            <!-- Use app:layout_behavior="@string/appbar_scrolling_view_behavior" to fit below top app bar -->

            <TextView
                android:id="@+id/tv_todo"
                style="@style/TextTitle.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="51dp"
                android:text="@string/card_todo"
                app:layout_constraintBottom_toTopOf="@+id/rv_todo"
                app:layout_constraintEnd_toStartOf="@+id/tv_todo_badge"
                app:layout_constraintStart_toStartOf="@+id/rv_todo"
                app:layout_constraintTop_toBottomOf="@+id/top_appbar_layout" />

            <TextView
                android:id="@+id/tv_todo_badge"
                style="@style/TextBody.Black.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/background_badge_grey"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_todo"
                app:layout_constraintStart_toEndOf="@+id/tv_todo"
                app:layout_constraintTop_toTopOf="@+id/tv_todo"
                tools:text="2" />

            <Button
                android:id="@+id/btn_todo_add"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/ic_add"
                app:layout_constraintBottom_toBottomOf="@+id/tv_todo_badge"
                app:layout_constraintEnd_toEndOf="@+id/rv_todo"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toEndOf="@+id/tv_todo_badge"
                app:layout_constraintTop_toTopOf="@+id/tv_todo_badge" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_todo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="48dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/rv_ongoing"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_todo"
                tools:listitem="@layout/item_todo" />

            <TextView
                android:id="@+id/tv_ongoing"
                style="@style/TextTitle.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="51dp"
                android:text="@string/card_progress"
                app:layout_constraintBottom_toTopOf="@+id/rv_ongoing"
                app:layout_constraintEnd_toStartOf="@+id/tv_ongoing_badge"
                app:layout_constraintStart_toStartOf="@+id/rv_ongoing"
                app:layout_constraintTop_toBottomOf="@+id/top_appbar_layout" />

            <TextView
                android:id="@+id/tv_ongoing_badge"
                style="@style/TextBody.Black.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/background_badge_grey"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_ongoing"
                app:layout_constraintStart_toEndOf="@+id/tv_ongoing"
                app:layout_constraintTop_toTopOf="@+id/tv_ongoing" />

            <Button
                android:id="@+id/btn_ongoing_add"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/ic_add"
                app:layout_constraintBottom_toBottomOf="@+id/tv_ongoing_badge"
                app:layout_constraintEnd_toEndOf="@+id/rv_ongoing"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toEndOf="@+id/tv_ongoing_badge"
                app:layout_constraintTop_toTopOf="@+id/tv_ongoing_badge" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_ongoing"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="22dp"
                android:paddingTop="5dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/rv_completed"
                app:layout_constraintStart_toEndOf="@+id/rv_todo"
                app:layout_constraintTop_toBottomOf="@+id/tv_ongoing" />

            <TextView
                android:id="@+id/tv_completed"
                style="@style/TextTitle.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="51dp"
                android:text="@string/card_done"
                app:layout_constraintBottom_toTopOf="@+id/rv_completed"
                app:layout_constraintEnd_toStartOf="@+id/tv_completed_badge"
                app:layout_constraintStart_toStartOf="@+id/rv_completed"
                app:layout_constraintTop_toBottomOf="@+id/top_appbar_layout" />

            <TextView
                android:id="@+id/tv_completed_badge"
                style="@style/TextBody.Black.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/background_badge_grey"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_completed"
                app:layout_constraintStart_toEndOf="@+id/tv_completed"
                app:layout_constraintTop_toTopOf="@+id/tv_completed" />

            <Button
                android:id="@+id/btn_completed_add"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/ic_add"
                app:layout_constraintBottom_toBottomOf="@+id/tv_completed_badge"
                app:layout_constraintEnd_toEndOf="@+id/rv_completed"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toEndOf="@+id/tv_completed_badge"
                app:layout_constraintTop_toTopOf="@+id/tv_completed_badge" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_completed"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="22dp"
                android:layout_marginEnd="258dp"
                android:paddingTop="5dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rv_ongoing"
                app:layout_constraintTop_toBottomOf="@+id/tv_completed" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_menu_cancel"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/ic_cancel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_menu_cancel"
                    app:layout_constraintVertical_bias="1.0"
                    tools:layout_editor_absoluteX="-132dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>

</layout>
